<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (!orders.length) { %>
        <h1>Nothing there!</h1>
        <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
            <li>
                <h2># <%= order.id %></h2>
                <ul>
                    <% order.products.forEach(p => { %>
                    <li># <%= p.title %> (<%= p.orderItem.quantity %>)</li>
                    <% }) %>
                </ul>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>